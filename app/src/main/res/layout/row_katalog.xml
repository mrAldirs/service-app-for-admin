<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/underline"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/tersediaNama"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:maxLength="20"
            android:textSize="18sp"
            android:maxLines="1"
            android:layout_marginHorizontal="12dp"
            android:text="Nama Barang"/>

        <TextView
            android:id="@+id/tersediaTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginHorizontal="12dp"
            android:maxLines="1"
            android:text="Tanggal Upload"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tersediaJenis"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:maxLines="1"
            android:layout_marginStart="12dp"
            android:text="Jenis Barang"/>

        <TextView
            android:id="@+id/tersediaStatusKatalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:textStyle="italic"
            android:maxLines="1"
            android:text="Status Katalog"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/tersediaPhoto"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:src="@drawable/image"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="end"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="@color/underline"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/btnDetailTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="4dp"
            android:text="Detail Transaksi"
            android:backgroundTint="#BDBDBD"
            app:icon="@drawable/dollar"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginEnd="80dp"
            android:text="Edit"
            app:icon="@drawable/edit"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnHapus"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="80dp"
            android:backgroundTint="#EC0D0D"
            android:text="Hapus"
            app:icon="@drawable/delete"
            android:layout_marginBottom="8dp"/>

    </com.google.android.material.card.MaterialCardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card" />

</androidx.constraintlayout.widget.ConstraintLayout>